<%- model_class = Project -%>
<div class="page-header">
  <h3><%= @project.title %></h3>
  <h3><small>Organization - <%= tenant_name(@project.tenant_id) %></small></h3>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @project.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:details) %></dt>
      <dd><pre class="prettyprint"><%= @project.details %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:expected_completion_date) %></dt>
      <dd><pre class="prettyprint"><%= @project.expected_completion_date %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tenant_id) %></dt>
      <dd><pre class="prettyprint"><%= @project.tenant_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('< Back to Organization Home'),
              root_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_tenant_project_path(project: @project, tenant: @project.tenant_id ), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              tenant_project_path(@project, @project.tenant_id),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>