<%- model_class = Project -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<% if @projects.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:title) %></th>
        <th><%= model_class.human_attribute_name(:details) %></th>
        <th><%= model_class.human_attribute_name(:expected_completion_date) %></th> 
        <th><%=t '.actions', default: t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to(project.title, tenant_project_path(project, tenant_id: @tenant.id)) %></td>
          <td><%= project.details %></td>
          <td><%= project.expected_completion_date %></td>
          <td>
            <%= link_to edit_tenant_project_path(project, tenant_id: @tenant.id), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
              <%= glyph 'pencil' %>
            <%- end -%>
            <%= link_to tenant_project_path(project, tenant_id: @tenant.id), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
              <%= glyph 'remove' %>
            <%- end -%>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
<% else %>
  <p class="lead">You currenlty don't have any projects</p>
<% end %>
<% if @tenant.can_create_projects? %>
  <%= link_to t('.new', default: t("helpers.links.new")),
            new_tenant_project_path(tenant_id: @tenant.id),
            class: 'btn btn-primary' %>
<% end %>
