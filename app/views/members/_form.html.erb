<%= form_for @member, html: { class: 'form-horizontal' } do |f| %>
  
  <%= fields_for( :user ) do |w| %>
    <div class="form-group">
      <%= w.label :email, :class => "control-label col-md-2" %>
      <div class="col-sm-10">
        <%= w.text_field :email, :class => "text_field form-control" %>
        <span class="description">Ex. test@example.com; must be unique</span>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :first_name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :first_name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :last_name, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  members_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
